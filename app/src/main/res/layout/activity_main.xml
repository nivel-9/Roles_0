<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#25FFFFFF"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Bienvenid@"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="58dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_account_circle" />

            <TextView
                android:id="@+id/texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="29dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="265dp" />

                <EditText
                    android:id="@+id/editTextText2"
                    android:layout_width="245dp"
                    android:layout_height="25dp"
                    android:background="@drawable/redondeado2"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="#610D7A"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="143dp"
                    tools:layout_editor_absoluteY="87dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:text="Género: "
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroupGenero"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="154dp"
                    tools:layout_editor_absoluteY="152dp">

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="125dp"
                        android:layout_height="36dp"
                        android:buttonTint="@color/white"
                        android:text="Masculino"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="121dp"
                        android:layout_height="46dp"
                        android:buttonTint="@color/white"
                        android:text="Femenino"
                        android:textColor="@color/white" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de nacimiento: "
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="265dp" />

                <EditText
                    android:id="@+id/editTextDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redondeado2"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="145dp"
                    tools:layout_editor_absoluteY="249dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivel de estudios: "
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="79dp"
                    tools:layout_editor_absoluteY="331dp" />

                <Spinner
                    android:id="@+id/spinnerNivel"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:background="@drawable/redondeado2"
                    tools:layout_editor_absoluteX="154dp"
                    tools:layout_editor_absoluteY="320dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temas de interés"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="72dp"
                    tools:layout_editor_absoluteY="382dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="Educación"
                        android:textColor="@color/white"
                        tools:layout_editor_absoluteX="159dp"
                        tools:layout_editor_absoluteY="374dp" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="Tecnología"
                        android:textColor="@color/white"
                        tools:layout_editor_absoluteX="157dp"
                        tools:layout_editor_absoluteY="416dp" />

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="Comunicación"
                        android:textColor="@color/white"
                        tools:layout_editor_absoluteX="269dp"
                        tools:layout_editor_absoluteY="374dp" />

                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="Sociedad"
                        android:textColor="@color/white"
                        tools:layout_editor_absoluteX="262dp"
                        tools:layout_editor_absoluteY="422dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número telefónico: "

                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="489dp" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/redondeado2"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:text="+52 "
                    android:textColor="#6F18A6"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="152dp"
                    tools:layout_editor_absoluteY="478dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-4dp"
                    android:text="Usuario: "
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="65dp"
                    tools:layout_editor_absoluteY="538dp" />

                <EditText
                    android:id="@+id/editTextText3"
                    android:layout_width="235dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/redondeado2"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="#6F18A6"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="152dp"
                    tools:layout_editor_absoluteY="526dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña: "

                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="65dp"
                    tools:layout_editor_absoluteY="592dp" />

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redondeado2"
                    android:drawableEnd="@drawable/ic_eye"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#6F18A6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activa el reenvío de formulario"
                    android:textColor="@color/white"
                    tools:layout_editor_absoluteX="157dp"
                    tools:layout_editor_absoluteY="639dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/white"
                    android:text="Enviar"
                    android:textColor="#661180"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="157dp"
                    tools:layout_editor_absoluteY="671dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="Enviar"
                    android:textColor="#661180"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="157dp"
                    tools:layout_editor_absoluteY="671dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>